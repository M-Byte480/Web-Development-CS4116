CREATE TABLE Users (
    id VARCHAR(36) DEFAULT UUID() NOT NULL PRIMARY KEY,
    lastName VARCHAR(255),
    firstName VARCHAR(255),
    email VARCHAR(255),
    hashedPassword VARCHAR(64),
    dateOfBirth DATE,
    dateJoined DATE,
    admin BOOLEAN,
    banned BOOLEAN,
    reportCount int(3),

    UNIQUE(email)
);

CREATE TABLE Profiles (
    userId VARCHAR(36) NOT NULL PRIMARY KEY,
    gender ENUM('Male', 'Female', 'Other'),
    seeking ENUM('Male', 'Female', 'Other'),
    description VARCHAR(400),
    likeCount int(3),
    dislikeCount int(3),

    FOREIGN KEY (userId) REFERENCES Users(id)
    ON DELETE CASCADE
);

CREATE TABLE Bans (
    userId VARCHAR(36) NOT NULL,
    bannedBy VARCHAR(36) NOT NULL,
    time TIMESTAMP,
    reason TEXT,
    permanent BOOLEAN,
    endDate DATE,

    FOREIGN KEY (userId) REFERENCES Users(id)
    ON DELETE CASCADE,
    FOREIGN KEY (bannedBy) REFERENCES Users(id)
    ON DELETE CASCADE,

    PRIMARY KEY (userId, time)
);

CREATE TABLE Pictures (
    userId VARCHAR(36) NOT NULL,
    imageIndex INT(1),
    imageData LONGTEXT,

    FOREIGN KEY (userId) REFERENCES Users(id)
    ON DELETE CASCADE,

    PRIMARY KEY (userId, imageIndex)
);


CREATE TABLE Interests(
    id INT AUTO_INCREMENT PRIMARY KEY,
    name VARCHAR(255),

    UNIQUE(name)

);

CREATE TABLE UserInterests(
    userId VARCHAR(36) NOT NULL,
    interestId INT NOT NULL,

    FOREIGN KEY (userId) REFERENCES Users(id)
    ON DELETE CASCADE,
    FOREIGN KEY (interestId) REFERENCES Interests(id)
    ON DELETE CASCADE,

    PRIMARY KEY (userId, interestId)
);

CREATE TABLE Likes(
    userId VARCHAR(36) NOT NULL,
    likedUser VARCHAR(36) NOT NULL,
    time TIMESTAMP,

    FOREIGN KEY (userId) REFERENCES Users(id)
    ON DELETE CASCADE,
    FOREIGN KEY (likedUser) REFERENCES Users(id)
    ON DELETE CASCADE,

    PRIMARY KEY (userId, likedUser)
);

CREATE TABLE Dislikes(
    userId VARCHAR(36) NOT NULL,
    dislikedUser VARCHAR(36) NOT NULL,
    time TIMESTAMP,

    FOREIGN KEY (userId) REFERENCES Users(id)
    ON DELETE CASCADE,
    FOREIGN KEY (likedUser) REFERENCES Users(id)
    ON DELETE CASCADE,

    PRIMARY KEY (userId, likedUser)
);

CREATE TABLE Connections(
    id VARCHAR(36) DEFAULT UUID() NOT NULL PRIMARY KEY,
    userId1 VARCHAR(36) NOT NULL,
    userId2 VARCHAR(36) NOT NULL,
    time TIMESTAMP,

    FOREIGN KEY (userId1) REFERENCES Users(id)
    ON DELETE CASCADE,
    FOREIGN KEY (userId2) REFERENCES Users(id)
    ON DELETE CASCADE
);

CREATE TABLE ChatLogs(
    messageId VARCHAR(36) DEFAULT UUID() NOT NULL PRIMARY KEY,
    userSent VARCHAR(36) NOT NULL,
    connectionId VARCHAR(36) NOT NULL,
    time TIMESTAMP,
    content TEXT,

    FOREIGN KEY (userSent) REFERENCES Users(id)
    ON DELETE CASCADE,
    FOREIGN KEY (connectionId) REFERENCES Connections(id)
    ON DELETE CASCADE
);

CREATE TABLE Beverages(
    id INT AUTO_INCREMENT PRIMARY KEY,
    name VARCHAR(255),

    UNIQUE(name)
);

CREATE TABLE UserBeverages(
    userId VARCHAR(36) NOT NULL,
    beverageId INT NOT NULL,

    FOREIGN KEY (userId) REFERENCES Users(id)
    ON DELETE CASCADE,
    FOREIGN KEY (beverageId) REFERENCES Beverages(id)
    ON DELETE CASCADE,

    PRIMARY KEY (userId, beverageId)
);

CREATE TABLE ProfilePictures(
    userId VARCHAR(36) NOT NULL,
    pfp LONGTEXT,

    FOREIGN KEY (userId) REFERENCES Users(id)
    ON DELETE CASCADE,

    PRIMARY KEY (userId)
)